{
  "name": "figma-make-to-react",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -H 127.0.0.1 -p 3001",
    "build-all": "npm run tokens && npm run icons && npm run convert && npm run assets && npm run dedup-css && echo 'âœ¨ Conversion complete! Run npm run dev to see your app'",
    "build": "npm run tokens && npm run icons && npm run convert && npm run assets && npm run dedup-css && npm run qa || true && next build",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "next lint",
    "tokens": "node scripts/build-tokens.mjs",
    "convert": "node scripts/convert-figma.mjs --format",
    "assets": "node scripts/optimize-assets.mjs",
    "qa": "node scripts/qa-figma.mjs",
    "stories": "node scripts/generate-stories.mjs",
    "a11y": "node scripts/a11y-audit.mjs",
    "css-trim": "node scripts/css-trim-report.mjs",
    "dedup-css": "node scripts/dedup-css-modules.mjs",
    "icons": "node scripts/build-icons.mjs",
    "convert:strict": "node scripts/convert-figma.mjs --mode=strict --format",
    "convert:format": "node scripts/convert-figma.mjs --format",
    "convert:verbose": "node scripts/convert-figma.mjs --format --verbose",
    "test": "vitest run",
    "format": "prettier --write .",
    "format:gen": "prettier --write src/components/generated",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "electron-build": "npm run build && electron-builder",
    "electron-pack": "electron-builder --dir",
    "electron-dist": "electron-builder",
    "build-app": "node scripts/build-app.mjs",
    "oneclick": "node scripts/oneclick.mjs",
    "deploy": "npm run build && vercel --prod",
    "deploy:preview": "npm run build && vercel",
    "export": "npm run build && next export",
    "convert:svg": "node scripts/convert-figma.mjs --svg=component --format",
    "convert:tailwind": "node scripts/convert-figma.mjs --tailwind-only --format",
    "convert:svg-tailwind": "node scripts/convert-figma.mjs --svg=component --tailwind-only --format",
    "convert:verbose-svg": "node scripts/convert-figma.mjs --svg=component --verbose --format",
    "typecheck": "tsc --noEmit",
    "lint:fix": "next lint --fix",
    "format:all": "prettier --write .",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "build:analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3001 --output=html --output-path=./lighthouse-report.html"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-dropzone": "^14.2.3",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "@svgr/webpack": "8.1.0",
    "cheerio": "1.0.0-rc.12",
    "@types/node": "20.14.10",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/adm-zip": "^0.5.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "@storybook/nextjs": "8.1.10",
    "@storybook/addon-essentials": "8.1.10",
    "@storybook/addon-links": "8.1.10",
    "@storybook/addon-a11y": "8.1.10",
    "storybook": "8.1.10",
    "postcss": "8.4.39",
    "sharp": "0.33.4",
    "svgo": "3.3.2",
    "tailwindcss": "3.4.7",
    "typescript": "5.4.5",
    "vitest": "1.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "prettier": "^3.3.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "jsdom": "^24.1.0"
  },
  "build": {
    "appId": "com.figma.converter",
    "productName": "Figma Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "electron/assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "title": "Figma Converter",
      "icon": "electron/assets/icon.icns"
    }
  }
}
